	<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="Financial big data analytics and insights using machine learning">
    <meta name="author" content="ZuriAnalytics">

    <!-- OG Meta Tags to improve the way the post looks when you share the page on LinkedIn, Facebook, Google+ -->
	<meta property="og:site_name" content="ZuriAnalytics"/> 
	<meta property="og:site" content="https://www.zurianalytics.com/"/> 
	<meta property="og:title" content="Financial big data analytics and insights using machine learning"/> <!-- title shown in the actual shared post -->
	<meta property="og:description" content="Homepage" />
	<meta property="og:image" content="images/ZuriAnalytics-Logo-Dark.png"/> <!-- image link, make sure it's jpg -->
	<meta property="og:url" content="https://www.zurianalytics.com/"/> 
	<meta property="og:type" content="article"/>

    <!-- Website Title -->
    <title>ZuriAnalytics</title>
    
    <!-- Styles -->
    {% include 'styles.njk' %}
	
	<!-- Icon  -->
    <link rel="icon" href="images/ZuriAnalytics-Logo-Dark.png">

</head>

<body data-spy="scroll" data-target=".fixed-top">
    
    <!-- Preloader -->
	<div class="spinner-wrapper">
        <div class="spinner">
            <div class="bounce1"></div>
            <div class="bounce2"></div>
            <div class="bounce3"></div>
        </div>
    </div>
    <!-- end of preloader -->
    
    {% include 'navigation.njk' %}

    <!-- Header -->
    <header id="header" class="header" >
        <div id = "particles"></div>
            <div class="container h-100">
                <div class="row align-items-center justify-content-center h-100">
                    <div class="col-sm-6 text-center text-md-left">
                        <h1><span class = "special">Zuri</span>Analytics <br>Using
                            <span id="js-rotating" class = "special txt-rotate" data-period="2000"
                                  data-rotate='[ "Machine Learning", "Big Data Tech"]'></span></h1>

                        <p class="p-large">We specialize in gathering and processing terabytes of data each day, so you don't have to!</p>
                        <a class = "button-link page-scroll" href="#details">HOW?</a>
                    </div> <!-- end of col -->
                </div> <!-- end of row -->
            </div> <!-- end of container -->
    </header> <!-- end of header -->
    <!-- end of header -->

    <!-- Details 1 -->
    <section id="details" class="dark">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>About</h2>
				</div>	<!-- end of col -->
            </div> <!-- end of row -->
            <div class="row">
                <div class="col-lg-6">
                    <video src = "images/ZuriAnalytics_Business_Visualization.mp4" autoplay loop muted alt="ZuriAnalytics business visualization"></video>
                </div> <!-- end of col -->
                <div class="col-lg-6">
                    <div class="text-container">
                        <h3>1. Data Collection</h3>
                        <p>We subscribe to data feeds of big institutions which provide us with raw data.
                            We run daily batches to aggregate this data and extract intelligence</p>
                        <a class="btn-solid-reg popup-with-move-anim" href="#details-lightbox-1">LIGHTBOX</a>
                    </div> <!-- end of text-container -->
                </div> <!-- end of col -->
            </div> <!-- end of row -->
        </div> <!-- end of container -->
    </section> <!-- end of basic-2 -->
    <!-- end of details 1 -->


    <!-- Products -->
    <section id="products" class="tabs white section">
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-lg-6">
                    <h2>PRODUCTS</h2>
                    <div class="tagline">ZuriAnalytics offers mutiple products for the financial industry. Both investors and enterprises profit from our solutions.</div>
                </div> <!-- end of col -->
            </div> <!-- end of row -->
            
            <div class="row">

                <!-- Tabs Links -->
                <ul class="nav nav-tabs" id="Tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="nav-tab" data-toggle="tab" href="#tab" role="tab" aria-controls="tab" aria-selected="false"><i class="fas fa-search"></i>APIs</a>
                    </li>
                </ul>
                <!-- end of tabs links -->


                <!-- Tabs Content-->
                <div class="tab-content" id="TabsContent">
                    <!-- Tab -->
                    <div class="tab-pane fade show active" id="tab" role="tabpanel" aria-labelledby="tab">
                        <div class="container">
                            <div class="row justify-content-md-center">

                                <div class = "col-md-3 px-5">
                                    <div class="card">
                                        <div class="card-icon">
                                            <i class="fas fa-cube"></i>
                                        </div>
                                        <div class="card-body">
                                            <h4 class="card-title">Product Title</h4>
                                            <p>This is a short description of the product</p>
                                        </div>
                                    </div>
                                </div>
                                <div class = "col-md-3 px-5">
