                                        <div class="card-icon">
                                            <i class="fas fa-bookmark"></i>
                                        </div>
                                        <div class="card-body">
                                            <h4 class="card-title">Product Title</h4>
                                            <p>This is a short description of the product</p>
                                        </div>
                                    </div>
                                </div>

                            </div> <!-- end of row -->
                        </div> <!-- end of container -->
                    </div> <!-- end of tab-pane -->
                    <!-- end of tab -->
                </div> <!-- end of tab-content -->
                <!-- end of tabs content -->

            </div> <!-- end of row -->
        </div> <!-- end of container -->
    </section> <!-- end of tabs -->
    <!-- end of features -->

    <!-- Download -->
    <div class="basic-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-xl-5">
                    <div class="text-container">
                        <h2>Discover our flagship product</h2>
                        <p class="p-large">XXX</p>
                        <a class = "button-link" href="#your-link">SEE DEMO</a>
                        <a class = "button-link" href="#your-link">SUBSCRIBE</a>
                    </div> <!-- end of text-container -->
                </div> <!-- end of col -->
                <div class="col-lg-6 col-xl-7">
                    <div class="image-container">
                        <img class="img-fluid" src="images/download.png" alt="alternative">
                    </div> <!-- end of img-container -->
                </div> <!-- end of col -->
            </div> <!-- end of row -->
        </div> <!-- end of container -->
    </div> <!-- end of basic-4 -->
    <!-- end of download -->

    <!-- Team -->
    <section id="team" class="white">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>TEAM</h2>
				</div>	<!-- end of col -->
            </div> <!-- end of row -->
            <div class="row">			
                <div class="col-lg-4 px-5">
                    <div class="card">
                        <img class="card-image" src="images/Founder-Slavin-Donchev.jpg" alt="Founder Slavin Donchev">
                        <div class="card-body">
                            <p class="team-member">Slavin Donchev - Technical Director & Co-founder</p>
							<p class="team-member-text">Slavin has over 10 years of experience as a big data architect in the financial industry.</p>
                        </div>
                    </div>
                </div> <!-- end of col -->

                <div class="col-lg-4 px-5">
                    <div class="card">
                        <img class="card-image" src="images/Marketing-Director-Dayana-Doncheva.jpg" alt="Marketing Director Dayana Doncheva">
                        <div class="card-body">
                            <p class="team-member">Dayana Doncheva - Marketing Director & Co-founder</p>
							<p class="team-member-text">Dayana has been working in digital marketing for big brands since 2013.</p>
                        </div>
                    </div>
                </div> <!-- end of col -->

                <div class="col-lg-4 px-5">
                    <div class="card">
                        <img class="card-image" src="images/Senior-Software-Engineer-Yordan-Dimitrov.jpg" alt="Senior Software Engineer Yordan Dimitrov">
                        <div class="card-body">
                            <p class="team-member">Yordan Dimitrov - Senior Software Engineer</p>
							<p class="team-member-text">Yordan is passionate about finance and has multiple years of experience in IT.</p>
                        </div>
                    </div>
                </div> <!-- end of col -->
